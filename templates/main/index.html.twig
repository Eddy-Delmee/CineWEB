{% extends 'base.html.twig' %}

{% block title %}CINEWEB
{% endblock %}

{% block body %}

	<main class="mainIndexBackground">
		{% for movie in movies %}
			{# <card> #}
			<div class="mainIndexCenterCard">
				<div class="card mb-3" style="max-width: 40em;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="{{ asset('uploads/images/' ~ movie.imageMovie) }}" width="100" class="card-img-top" alt="...">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">{{ movie.titleMovie }}</h5>
								<p class="card-text">{{ movie.shortDesciptionMovie|slice(0, 200) ~ '...' }}</p>
								<p class="card-text">
									<small class="text-muted">Last updated 3 mins ago</small>
								</p>

								<table>

									<thead>
										<th>Visions</th>
										<th>Horaires</th>
										<th>Salons</th>
									</thead>

									<tr>
										{% for session in sessions %}
											<td>{{session.dateSession|date('d-m')}}</td>
											<td>{{session.dateSession|date('H:i')}}</td>
											{{ dump(session) }}
											{% for hall in session.halls %}
												<pre>
											
										</pre>
												<td>{{hall.nameHall}}</td>
											{% endfor %}
										{% endfor %}
									</tr>

								</table>

							</div>
						</div>
					</div>
				</div>
			</div>
			{# </card> #}
		{% endfor %}
	</main>

{% endblock %}
