{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<h1 class="text-center backgroundShow">Categories</h1>

	<table class="table table-dark table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>NameCategory</th>
				<td>{{ category.nameCategory }}</td>
			</tr>
		</tbody>
	</table>

	<div class="text-center backgroundShow">
		<a href="{{ path('app_categories_index') }}" class="btn btn-light mb-3">Retour</a>

		<a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-success mb-3">Editer</a>

		{{ include('categories/_delete_form.html.twig') }}
	</div>
{% endblock %}
