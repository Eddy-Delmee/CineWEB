{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<h1 class="text-center grey yellow">Categories</h1>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom categorie</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.nameCategory }}</td>
					<td>
						<a href="{{ path('app_categories_show', {'id': category.id}) }}" class="btn btn-light">Afficher</a>
						<a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-light">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="text-center backgroundShow">
		<a href="{{ path('app_categories_new') }}" class="btn btn-success">Créer Nouveau</a>
	</div>
{% endblock %}
