{% extends 'base.html.twig' %}

{% block title %}Recommendations{% endblock %}

{% block body %}
    <h1>Recommendations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Restriction Âge</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recommendation in recommendations %}
            <tr>
                <td>{{ recommendation.id }}</td>
                <td>{{ recommendation.forbiddenAge }}</td>
                <td>
                    <a href="{{ path('app_recommendations_show', {'id': recommendation.id}) }}">Afficher</a>
                    <a href="{{ path('app_recommendations_edit', {'id': recommendation.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recommendations_new') }}">Créer Nouveau</a>
{% endblock %}
