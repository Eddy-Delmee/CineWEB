{% extends 'base.html.twig' %}

{% block title %}Recommendations index{% endblock %}

{% block body %}
    <h1>Recommendations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ForbiddenAge</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recommendation in recommendations %}
            <tr>
                <td>{{ recommendation.id }}</td>
                <td>{{ recommendation.forbiddenAge }}</td>
                <td>
                    <a href="{{ path('app_recommendations_show', {'id': recommendation.id}) }}">show</a>
                    <a href="{{ path('app_recommendations_edit', {'id': recommendation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recommendations_new') }}">Create new</a>
{% endblock %}
