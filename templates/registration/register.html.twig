{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

	<section class="container centerMap">
		<div class="row">
			<div class="col white">
				<h1 class="h3 mb-3 font-weight-normal yellow">Inscription</h1>
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				<a href="{{ path('privacy_policy') }}" class="white">{{ form_row(registrationForm.agreeTerms) }}</a>

				<button type="submit" class="btn btn-primary btn-lg">M'inscrire</button>
				{{ form_end(registrationForm) }}

				<a class="btn btn-lg btn-secondary mt-3" href="{{ path('app_login') }}">
					Me connecter
				</a>

			</div>
		</div>
	</section>


{% endblock %}
