{% extends 'base.html.twig' %}

{% block title %}Actualités
{% endblock %}

{% block body %}

	<h1 class="text-center grey yellow">Actualités</h1>

	<table class="table table-dark table-striped mb-2">
		<tbody>
			<tr>
				<th>ID</th>
				<td>{{ news.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ news.titleNew }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ news.imageNew }}</td>
			</tr>
			<tr>
				<th>Vidéo</th>
				<td>{{ news.videoNew }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ news.descriptionNew }}</td>
			</tr>
		</tbody>
	</table>

	<div class="text-center backgroundShow mt-2">
		<a href="{{ path('app_news_index') }}" class="btn btn-light mb-3">Retour</a>

		<a href="{{ path('app_news_edit', {'id': news.id}) }}" class="btn btn-success mb-3">Editer</a>

		{{ include('news/_delete_form.html.twig') }}
	</div>

{% endblock %}
