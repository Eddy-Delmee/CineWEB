{% extends 'base.html.twig' %}

{% block title %}Salons{% endblock %}

{% block body %}
    <h1>Salons</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom salon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hall in halls %}
            <tr>
                <td>{{ hall.id }}</td>
                <td>{{ hall.nameHall }}</td>
                <td>
                    <a href="{{ path('app_halls_show', {'id': hall.id}) }}">Afficher</a>
                    <a href="{{ path('app_halls_edit', {'id': hall.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_halls_new') }}">Créer Nouveau</a>
{% endblock %}
