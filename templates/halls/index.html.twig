{% extends 'base.html.twig' %}

{% block title %}Salons
{% endblock %}

{% block body %}
	<h1 class="text-center grey yellow">Salons</h1>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom salon</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for hall in halls %}
				<tr>
					<td>{{ hall.id }}</td>
					<td>{{ hall.nameHall }}</td>
					<td>
						<a href="{{ path('app_halls_show', {'id': hall.id}) }}" class="btn btn-light">Afficher</a>
						<a href="{{ path('app_halls_edit', {'id': hall.id}) }}" class="btn btn-light">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="text-center backgroundShow">
		<a href="{{ path('app_halls_new') }}" class="btn btn-success">Créer Nouveau</a>
	</div>
{% endblock %}
