{% extends 'base.html.twig' %}

{% block title %}Sessions
{% endblock %}

{% block body %}
	<h1 class="text-center backgroundShow">Sessions</h1>

	<table class="table table-dark table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ session.id }}</td>
			</tr>
			<tr>
				<th>MonthMovie</th>
				<td>{{ session.monthMovie }}</td>
			</tr>
			<tr>
				<th>HourMovie</th>
				<td>{{ session.hourMovie }}</td>
			</tr>
			<tr>
				<th>DayMovie</th>
				<td>{{ session.dayMovie }}</td>
			</tr>
		</tbody>
	</table>

	<div class="text-center backgroundShow">
		<a href="{{ path('app_sessions_index') }}" class="btn btn-light">Retour</a>

		<a href="{{ path('app_sessions_edit', {'id': session.id}) }}" class="btn btn-susses">Editer</a>

		{{ include('sessions/_delete_form.html.twig') }}
	</div>
{% endblock %}
