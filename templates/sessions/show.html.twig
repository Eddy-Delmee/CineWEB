{% extends 'base.html.twig' %}

{% block title %}Horaires
{% endblock %}

{% block body %}

	<h1 class="text-center grey yellow">Horaires</h1>

	<table class="table table-dark table-striped mb-2">
		<tbody>
			<thead>
				<th>ID</th>
                <th>Mois film</th>
                <th>Heure film</th>
			</thead>
			<tr>
				<td>{{ session.id }}</td>
				<td>{{ session.dateSession|date('d-m-Y') }}</td>
				<td>{{ session.dateSession|date('H:i') }}</td>
			</tr>
		</tbody>
	</table>

	<div class="text-center backgroundShow mt-2">
		<a href="{{ path('app_sessions_index') }}" class="btn btn-light mb-3">Retour</a>

		<a href="{{ path('app_sessions_edit', {'id': session.id}) }}" class="btn btn-success mb-3">Editer</a>

		{{ include('sessions/_delete_form.html.twig') }}
	</div>

{% endblock %}
