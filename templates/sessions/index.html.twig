{% extends 'base.html.twig' %}

{% block title %}Horaires
{% endblock %}

{% block body %}
	<h1 class="text-center backgroundShow">Horaires</h1>

	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Jours-mois-Années</th>
				<th>Heures films</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for session in sessions %}
				<tr>
					<td>{{ session.id }}</td>
					<td>{{ session.dateSession|date('d-m-Y') }}</td>
					<td>{{ session.dateSession|date('H:i') }}</td>
					<td>
						<a href="{{ path('app_sessions_show', {'id': session.id}) }}" class="btn btn-light">Afficher</a>
						<a href="{{ path('app_sessions_edit', {'id': session.id}) }}" class="btn btn-light">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="text-center backgroundShow">
		<a href="{{ path('app_sessions_new') }}" class="btn btn-success">Créer Nouveau</a>
	</div>

{% endblock %}
